            <parent link="${name}_forearm_link"/>
            <child link="${name}_offset_link"/>
            <origin xyz="0 0.16 0.025" rpy="1.57 0 0"/>
            <axis xyz="0 1 0"/>
            <limit effort="10.0" velocity="1.0" lower="0" upper="0"/>
        </joint>
        

<?xml version="1.0"?>

<launch>

    <!-- Arduino 1 -->
    <node pkg="rosserial_python" type="serial_node.py" name="ultra_sonic_001">
        <param name="port" value="/dev/ttyACM0"/>
        <param name="baud" value="57600"/>
        <remap from="/ultra_sonic_1" to="/ultra_sonic_1_001"/>
        <remap from="/ultra_sonic_2" to="/ultra_sonic_2_001"/>
    </node>

    <!-- Arduino 2 -->
    <node pkg="rosserial_python" type="serial_node.py" name="ultra_sonic_002">
        <param name="port" value="/dev/ttyACM1"/>
        <param name="baud" value="57600"/>
        <remap from="/ultra_sonic_1" to="/ultra_sonic_1_002"/>
        <remap from="/ultra_sonic_2" to="/ultra_sonic_2_002"/>
    </node>

</launch>

